<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_gap">



    <androidx.recyclerview.widget.RecyclerView
        app:stackFromEnd="true"
        android:id="@+id/reyclerview_message_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_scroll"></androidx.recyclerview.widget.RecyclerView>


    <!-- A horizontal line between the chatbox and RecyclerView -->
    <View android:id="@+id/chat_scroll"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@id/layout_chatbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/default_gap">

        <EditText
            android:id="@+id/edittext_chatbox"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_gap"
            android:layout_marginRight="@dimen/default_gap"
            android:layout_weight="1"
            android:background="@drawable/rounded_corner_edit_text"
            android:hint="Enter message"
            android:maxLines="6"
            style="@style/Theme.Base.CoTrack.Light"
            android:textAlignment="center"
            android:textColor="@color/aluminum"/>

        <ImageButton
            android:id="@+id/button_chatbox_send"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/send_message_icon_express"
            android:clickable="true"
            android:gravity="center"
            android:elevation="@dimen/card_elevation"
            android:padding="@dimen/default_gap"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
