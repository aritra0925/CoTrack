<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@id/feedView"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/AppTheme.Dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/card_elevation"
                android:src="@drawable/ambulance_icon" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_weight="3"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/AppTheme.Dark"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/logoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/feedView"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/feedView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_Service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_8"
                        android:lines="1"
                        android:textColor="@color/accent"
                        android:fontFamily="@font/trebuc"
                        android:layout_gravity="left"
                        android:padding="@dimen/default_gap"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="AMRI Hospital"/>

                    <TextView
                        android:id="@+id/textView_ServiceDetails_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_gravity="left"
                        android:fontFamily="@font/trebuc"
                        android:padding="@dimen/default_gap"
                        android:text="No of Beds : 70"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/accent" />
                    <TextView
                        android:id="@+id/textView_ServiceDetails_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_4"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_marginRight="@dimen/margin_8"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:layout_gravity="left"
                        android:fontFamily="@font/trebuc"
                        android:padding="@dimen/default_gap"
                        android:text="The hospital has advanced equipments to serve you better. It has Emergency, MRI, CT Scan as well as out patient "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/accent" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_gap"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/rounded_rectangle_button"
            android:padding="@dimen/default_gap"
            android:text="@string/add_to_cart"
            android:textColor="@color/accent" />

        <LinearLayout
            android:id="@+id/layio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/subtract_1"
                    android:textColor="@color/accent"
                    android:background="@drawable/rounded_rectangle_button"
                    android:fontFamily="@font/trebuc"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"/>


            <TextView
                android:id="@+id/prnumber"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="0"
                android:textColor="@color/accent"
                android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/add_1"
                    android:textColor="@color/accent"
                    android:background="@drawable/rounded_rectangle_button"
                    android:fontFamily="@font/trebuc"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>