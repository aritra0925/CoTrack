<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOrder"
        style="@style/AppTheme.Dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/service_card_height"
        android:layout_gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <RelativeLayout
                android:id="@+id/imageLayoutOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight=".5">

                <ImageView
                    android:id="@+id/imageViewOrder"
                    android:layout_width="@dimen/service_image_width"
                    android:layout_height="80dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/default_gap"
                    android:layout_marginTop="@dimen/default_gap"
                    android:layout_marginRight="@dimen/default_gap"
                    android:layout_marginBottom="@dimen/default_gap"
                    android:padding="@dimen/default_gap" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orderDetailsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageLayoutOrder"
                android:padding="@dimen/default_gap"
                android:layout_weight="4">

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/trebuc"
                    android:padding="@dimen/default_gap"
                    android:text="TextView"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orderId"
                    android:layout_gravity="left"
                    android:fontFamily="@font/trebuc"
                    android:padding="@dimen/default_gap"
                    android:text="TextView"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/askForlUpdateLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_toRightOf="@id/orderDetailsLayout"
                android:padding="@dimen/default_gap"
                android:layout_weight=".5">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="@dimen/default_gap"
                    android:id="@+id/btn_askForUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_rectangle_button"
                    android:padding="@dimen/default_gap"
                    android:text="Ask for update"
                    android:textColor="@color/accent" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>