<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:icon="@drawable/addition" >
        <shape>
            <solid
                android:color="@color/primary_darker" />
            <stroke
                android:width="7dp"
                android:color="@color/accent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/primary_darker"
                android:endColor="@color/primary"
                android:angle="270" />
            <stroke
                android:width="7dp"
                android:color="@color/primary_darker" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>