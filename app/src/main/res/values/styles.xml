<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="fontFamily">@font/trebuc</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="cardBackgroundColor">@color/jet</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/accent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
        <item name="cardCornerRadius">@dimen/card_rounded</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="colorSecondary">@color/primary_darker</item>
        <item name="fontFamily">@font/trebuc</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="customButtonStyle" parent="AppTheme.Dark">
        <item name="background">@drawable/rounded_rectangle_button</item>
    </style>

</resources>
